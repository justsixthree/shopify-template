<div class="product__slider">
    <div class="slider__container">
        {% for image in product.images %}
        <div class="fade product__slides">
            <a href="{{ product.url }}"><img class="product__image" src="{{ image | img_url: '500x' }}" alt="{{ image.alt | escape }}" /></a>
        </div>
        {% endfor %}
    </div>
</div>

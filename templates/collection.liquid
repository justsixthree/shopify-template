<section class="section">
  <div class="container">

    <div class="collection">
      <div class="collection__header text-center">
        <h2 class="collection__title">{{ collection.title }}</h2>
        <p class="collection__description">{{ collection.description }}</p>
      </div>
      <div class="collection__content">
        <div class="collection__carsouel">
          {% for product in collection.products %}
          <div class="collection__carsouel--item">
            {% include 'product' %}
          </div>
          {% endfor %}

        </div>
      </div>
    </div>
  </div>
</section>
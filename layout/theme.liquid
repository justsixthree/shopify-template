<!doctype html>
<html class="no-js">
<head>
    <meta charset="utf-8" />
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1' /><![endif]-->
    <title>
        {{ page_title }}{% if current_tags %} &ndash; tagged
        "{{ current_tags | join: ', ' }}"{% endif %}{% if current_page != 1 %} &ndash; Page
        {{ current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}
    </title>
    {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}" />
    {% endif %}
    <link rel="canonical" href="{{ canonical_url }}" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    {{ content_for_header }}
    {{ 'https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.0.0/animate.min.css' | stylesheet_tag }}
    {{ 'slick.css' | asset_url | stylesheet_tag }}
    {{ 'slick-theme.css' | asset_url | stylesheet_tag }}
    {{ 'fonts.css' | asset_url | stylesheet_tag }}
    {{ 'style.css' | asset_url | stylesheet_tag }}
</head>
<body class="template-{{ template | handleize }}">
    {% section "header" %}
    
    <main role="main">
        {{ content_for_layout }}
    </main>

    {% section "footer" %}
    
    {{ 'shopify_common.js' | shopify_asset_url | script_tag }}
    {% if template contains 'customers' %}
    {{ 'customer_area.js'  | shopify_asset_url | script_tag }}
    {% endif %}
    {{ 'shopify_common.js'  | asset_url | script_tag }}
    {{ 'option_selection.js' | shopify_asset_url | script_tag }}
    {{ 'https://code.jquery.com/jquery-3.5.1.min.js' | script_tag }}
    {{ 'shop.js'  | asset_url | script_tag }}
    {{ 'slick.min.js'  | asset_url | script_tag }}
    {{ 'main.js'  | asset_url | script_tag }}
    
    <script src="https://cdn.jsdelivr.net/npm/vanilla-lazyload@16.1.0/dist/lazyload.min.js"></script>
    {{ 'lazyLoad.js'  | asset_url | script_tag }}
</body>
</html>